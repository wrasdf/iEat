<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/device_padding"
              android:paddingRight="@dimen/device_padding"
              android:paddingTop="@dimen/device_padding">

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/bill_unpaid_not_content"
              android:text="@string/bill_unpaid_no_content"/>
    <ListView android:id="@+id/bill_unpaid_list"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:divider="@null"
              android:dividerHeight="2dp"/>

</LinearLayout>