<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.thoughtworks.ieat" android:versionCode="1" android:versionName="0.1-SNAPSHOT">
    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application android:name=".IEatApplication"
                android:icon="@drawable/icon"
                 android:label="@string/app_name"
                 android:theme="@android:style/Theme.Holo.Light">
        <activity android:name=".activity.LoginActivity"
                android:theme="@android:style/Theme.Holo.Light.NoActionBar"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.RegisterActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.GroupListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.GroupTabActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.GroupCreateActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.GroupInfoActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.GroupAnalysisActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.GroupMyselfActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.GroupMemberActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.OrderCreateActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.BillActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.PayBackActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.UnpaidOrderActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>

