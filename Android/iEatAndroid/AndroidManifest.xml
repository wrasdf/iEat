<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.thoughtworks.ieat" android:versionCode="1" android:versionName="0.1-SNAPSHOT">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application android:name=".IEatApplication"
                android:icon="@drawable/icon"
                 android:label="@string/app_name"
                 android:theme="@android:style/Theme.Light"
            >
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.DashboardActivity"/>
        <activity android:name=".activity.MyGroupActivity" />
        <activity android:name=".activity.JoinedGroupActivity" />
    </application>

</manifest>

