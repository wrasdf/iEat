<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.thoughtworks.ieat" android:versionCode="1" android:versionName="0.1-SNAPSHOT">
    <uses-sdk android:minSdkVersion="15"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application android:name=".IEatApplication"
                android:icon="@drawable/icon"
                 android:label="@string/app_name"
                 android:theme="@android:style/Theme.Holo.Light">
        <activity android:name=".activity.LoginActivity"
                android:theme="@android:style/Theme.Holo.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.GroupListActivity"/>
        <activity android:name=".activity.GroupTabActivity"/>
        <activity android:name=".activity.GroupCreateActivity"/>
        <activity android:name=".activity.GroupInfoActivity"/>
        <activity android:name=".activity.GroupAnalysisActivity"/>
        <activity android:name=".activity.GroupMyselfActivity"/>
        <activity android:name=".activity.GroupMemberActivity"/>
    </application>

</manifest>

