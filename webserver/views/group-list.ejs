        <a href="#user-recharge" class="ui-btn-right" data-icon="arrow-r" data-iconpos="right" data-theme="b">My Bills</a>
    </div><!-- /header -->

    <div data-role="content">
        <a href="#user-create-content" data-role="button">I want to create my group.</a>
        <h2>My Orders</h2>
        <ul data-role="listview" data-inset="true" class="my-orders-ul"></ul>
        <h2>Available Groups</h2>
        <ul data-role="listview" data-inset="true" class="group-list-ul"></ul>
    </div>
</div>

<div data-role="page" id="user-create-content">
    <div data-role="header">
        <a href="#user-restaurant-list" class="ui-btn-left"  data-icon="arrow-l"  data-theme="b">Back</a>
        <h1>Restaurant List</h1>
    </div><!-- /header -->

    <div data-role="content">
        <ul data-role="listview" data-inset="true">
            <li><a href="#user-restaurant-details">九头鹰</a></li>
            <li><a href="#user-restaurant-details">来福士超市</a></li>
            <li><a href="#user-restaurant-details">面馆</a></li>
        </ul>
        <h2>PassWord:</h2>
        <input type="text" >
        <h2>Cut-Off Date : <span id="show-Time"></span></h2>
        <div id="timePicker"></div>
        <a class="create-group-btn" href="#user-restaurant-list" data-role="button" >Create This Group</a>
    </div>
</div>

<div data-role="page" id="user-recharge">
    <div data-role="header">
        <a href="#user-restaurant-list" data-icon="arrow-l"  class="ui-btn-left" data-theme="b">Back</a>
        <h1>Recharge List</h1>
    </div><!-- /header -->

    <div data-role="content">
        <ul data-role="listview" data-inset="true">
            <li><a href="#recharge-details">九头鹰 2013-1-12  34$</a></li>
