#group-show{"data-role" => "page" ,"data-id" => "#{@group.id}" }
  %div{"data-role" => "header"}
    %a.ui-btn-left{"data-icon" => "arrow-l", "data-theme" => "c", :href => "#group-list"} 返回
    %h1= @group.name
    %a.ui-btn-right.buy-foods{"data-icon" => "arrow-r", "data-iconpos" => "right", "data-id" => "#{@group.id}", "data-theme" => "c", :href => "javascript:void(0);"} 买饭去
  %div.info-details{"data-role" => "content"}

    %div.details-content.restaurant-details

      %h2 本团介绍
      %ul.listview{"data-role" => "listview", "data-inset"=>"true"}
        %li
          %span.subject 团名
          %span= @group.name
        %li
          %span.subject 本团宗旨
          %span 辣死人不偿命

      %h2 餐馆简介
      %ul.listview{"data-role" => "listview", "data-inset"=>"true"}
        %li
          %span.subject 饭店名称
          %span 九头鹰
        %li
          %span.subject 订餐电话
          %span 13400077882
        %li
          %span.subject 外卖时间
          %span 10:30-21:00
        %li
          %span.subject 起送金额
          %span 送餐费1元

    %div.details-content.my-orders-details
      %h2 我的订餐
      %ul.listview.order-status{"data-role" => "listview", "data-inset"=>"true"}
        %li
          %h2 王锐
          %table
            %tr
              %td.dish-name 小炒肉
              %td.dish-price 12$
              %td.dish-count
                %div.dish-count
                  %span.ui-li-count 1
            %tr
              %td.dish-name 蒙面
              %td.dish-price 12$
              %td.dish-count
                %div.dish-count
                  %span.ui-li-count 1
            %tr
              %td.dish-name 总计
              %td.dish-price 24$
              %td

    %div.details-content.all-status
      %h2 统计信息
      %ul.listview.order-status{"data-role" => "listview", "data-inset"=>"true"}
        %li
          %table
            %tr
              %td.dish-name 小炒肉
              %td.dish-price 12$
              %td.dish-count
                %div.dish-count
                  %span.ui-li-count 4
            %tr
              %td.dish-name 蒙面
              %td.dish-price 12$
              %td.dish-count
                %div.dish-count
                  %span.ui-li-count 4
            %tr
              %td.dish-name 总计
              %td.dish-price 245$
              %td

    %div.details-content.members-details
      %h2 团员订餐信息
      %ul.listview.order-status{"data-role" => "listview", "data-inset"=>"true"}
        %li
          %h2 明星
          %table
            %tr
              %td.dish-name 小炒肉
              %td.dish-price 12$
              %td.dish-count
                %div.dish-count
                  %span.ui-li-count 1
            %tr
              %td.dish-name 总计
              %td.dish-price 12$
              %td
        %li
          %h2 姚新
          %table
            %tr
              %td.dish-name 小炒肉
              %td.dish-price 12$
              %td.dish-count
                %div.dish-count
                  %span.ui-li-count 1
            %tr
              %td.dish-name 总计
              %td.dish-price 12$
              %td


    %a.buy-foods{ :href => "javascript:void(0);" ,"data-role" => "button"} 买饭去

  %div.fixed-footer{"data-position" => "fixed", "data-role" => "footer"}
    %div{"data-role" => "navbar"}
      %ul
        %li
          %a.restaurant-info-btn{:href => "","data-icon"=>"star","data-iconpos"=>"top"} 本团信息
        %li
          %a.all-info-btn{:href => "","data-icon"=>"star","data-iconpos"=>"top"} 统计信息
        %li
          %a.my-orders-btn{:href => "","data-icon"=>"star","data-iconpos"=>"top"} 我的订餐
        %li
          %a.members-orders-btn{:href => "","data-icon"=>"star","data-iconpos"=>"top"} 团员信息
