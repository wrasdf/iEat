!!!
%html
  %head
    %title My Page
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    = stylesheet_link_tag "themes/default/common", :media => "all"
    = stylesheet_link_tag "themes/default/jquery.mobile-1.3.0", :media => "all"
    = stylesheet_link_tag "themes/default/mobiscroll.datetime-2.4.1.min", :media => "all"
    = stylesheet_link_tag "themes/default/app", :media => "all"
  %body
    #create-group{"data-role" => "page"}
      %div{"data-role" => "header"}
        %a.ui-btn-left{"data-icon" => "arrow-l", "data-theme" => "c", :href => "javascript:void(0);"} 返回
        %h1 创建饭团
        %a.ui-btn-right.create-group-btn{"data-theme" => "c", :href => "javascript:void(0);"} 创建
      %div{"data-role" => "content"}
        %h2 饭团名 :
        %input#group-name{:type => "text",:required => true}
        %div.radio-content-list
        %a.more-restaurants{"data-role" => "button", :href => "javascript:void(0);"} 选择其他馆子
        %h2 截止时间 :
        %ul.listview{"data-role" => "listview", "data-inset"=>"true"}
          %li
            %span#show-Time
        %div#timePicker
        %a.create-group-btn{"data-role" => "button", :href => "javascript:void(0);"} 创建
  = javascript_include_tag "jquery/jquery-1.9.1"
  = javascript_include_tag "jquery/jquery.mobile-1.3.0"
  = javascript_include_tag "jquery/jquery.cookie"
  = javascript_include_tag "jquery/mobiscroll.datetime-2.4.1.min"
  = javascript_include_tag "utility/date"
  = javascript_include_tag "utility/utility"
  = javascript_include_tag "logic/group-create"