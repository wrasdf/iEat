!!!
%html
  %head
    %title My Page
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no", :name => "viewport"}
    = stylesheet_link_tag "themes/default/all", :media => "all"
  %body
    .loading
    #login-page{"data-role" => "page"}
      %div{"data-role" => "header"}
        %h1 登陆
      %div{"data-role" => "content"}
        %form.login-form
          %h2 用户名/邮箱
          %input#input-data{"type"=>"text"}
          %h2 密码
          %input#input-password{"type"=>"password"}
          %input#login-btn{"type" => "submit", "data-role"=>"button", "data-inline"=>"true", "value" => "登陆"}
          %input#sign-up{"type" => "button", "data-role"=>"button", "data-inline"=>"true", "value" => "注册"}

  = javascript_include_tag "compress/login-all"