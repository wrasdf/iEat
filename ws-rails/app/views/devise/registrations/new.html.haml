!!!
%html
  %head
    %title My Page
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    = stylesheet_link_tag "themes/default/common", :media => "all"
    = stylesheet_link_tag "themes/default/jquery.mobile-1.3.0", :media => "all"
    = stylesheet_link_tag "themes/default/mobiscroll.datetime-2.4.1.min", :media => "all"
    = stylesheet_link_tag "themes/default/app", :media => "all"
  %body
    #sign-up{"data-role" => "page"}
      %div{"data-role" => "header"}
        %h1 注册
      %div{"data-role" => "content"}
        %form.register-form
          %h2 用户名
          %input{"type"=>"text",:required => true, :id =>'input-username'}
          %h2 邮箱
          %input{"type"=>"email",:required => true, :id =>'input-email'}
          %h2 电话
          %input{"type"=>"number",:required => true, :id =>'input-telephone'}
          %h2 密码
          %input{"type"=>"password",:required => true, :id =>'input-password'}
          %h2 重复密码
          %input{"type"=>"password",:required => true, :id =>'input-password-confirmation'}
          %input{"type"=>"submit", :value => "注册"}

  = javascript_include_tag "jquery/jquery-1.9.1"
  = javascript_include_tag "jquery/jquery.mobile-1.3.0"
  = javascript_include_tag "jquery/jquery.cookie"
  = javascript_include_tag "utility/utility"
  = javascript_include_tag "logic/sign-up"
