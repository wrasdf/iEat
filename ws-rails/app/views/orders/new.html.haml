      .edit-my-orders-content

        %div{"data-collapsed-icon" => "arrow-d", "data-content-theme" => "d", "data-expanded-icon" => "arrow-u", "data-role" => "collapsible", "data-theme" => "b"}
          %h4 Order menus
          %ul.listview.edit-restaurant-details{"data-inset" => "true","data-filter" => "true", "data-filter-placeholder" => "Search fruits...", "data-role" => "listview"}
            - @dishes.each do |dish|
              %li.cf{"data-dish-id" => dish.id}
                %span.restaurant-content
                  %span.dish-name= "#{dish.name}"
                  %span.dish-price= "#{dish.price} $ "
                .group-button-content{"data-role" => "controlgroup", "data-type" => "horizontal"}
                  %a.reduce{"data-icon" => "arrow-d", "data-mini" => "true", "data-role" => "button", :href => ""}  
                  %a.add{"data-icon" => "arrow-u", "data-mini" => "true", "data-role" => "button", :href => ""}  
                %input.number-input{"data-mini" => "true", :type => "number", :value => "0"}
          %a.confirm-foods{"data-role" => "button", "data-id" => "#{@group.id}", :href => "javascript:void(0);"} Confirm

